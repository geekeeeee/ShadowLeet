{
    "manifest_version": 3,
    "name": "Dark Mode Converter",
    "version": "1.0",
    "description": "Convert web pages into dark mode.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["darkmode.css"],
        "run_at": "document_idle"
      }
    ]
  }
  